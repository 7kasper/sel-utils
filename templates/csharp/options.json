{
	"repo": {
		"name": "C#",
		"src": "src",
		"exclude": ["sul/Utils/About.cs"]
	},
	"indentation": "spaces",
	"types": {
		"conv": {
			"basic": {
				"byte": "sbyte",
				"ubyte": "byte",
				"bytes": "byte[]",
				"uuid": "Guid",
				"triad": "int",
				"varshort": "short",
				"varushort": "ushort",
				"varint": "int",
				"varuint": "uint",
				"varlong": "long",
				"varulong": "ulong"
			},
			"tuples": {
				"2": "Tuple<%, %>",
				"3": "Tuple<%, %, %>"
			},
			"arrays": {
				"fixed": "{{TYPE}}[] {{NAME}} = new {{TYPE}}[{{SIZE}}]"
			},
			"metadata": "sul.Metadata.{{GAME:pascal_case}}.Metadata",
			"others": "Types.{{TYPE:pascal_case}}"
		},
		"encoding": {
			"basic": "_buffer.Write{{ENDIANNESS:pascal_case}}{{ORIGINAL_TYPE:pascal_case}}({{NAME:camel_case}});",
			"types": "{{NAME:camel_case}}.EncodeBody(_buffer);",
			"arrays": "foreach({{ELEMENT_TYPE}} {{ELEMENT_NAME:camel_case}} in {{NAME:camel_case}}){ {{CONTENT}} }",
			"tuples": "{{NAME:camel_case}}[{{INDEX}}]"
		},
		"decoding": {
			"basic": "{{NAME:camel_case}} = _buffer.Read{{ENDIANNESS:pascal_case}}{{ORIGINAL_TYPE:pascal_case}}();",
			"types": "{{NAME:camel_case}}.DecodeBody(_buffer);"
		}
	}
}
