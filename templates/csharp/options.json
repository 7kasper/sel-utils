			"metadata": "sul.Metadata.{{GAME:pascal_case}}.Metadata",
			"others": "Types.{{TYPE:pascal_case}}"
		},
		"encoding": {
			"basic": "this.Write{{ENDIANNESS:pascal_case}}{{TYPE:pascal_case}}(this.{{NAME:camel_case}})",
