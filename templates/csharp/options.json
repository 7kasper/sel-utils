{
	"repo": {
		"name": "C#",
		"src": "src",
		"exclude": ["sul/Utils/About.cs"],
		"include": ["sel-utils.csproj", "Properties/AssemblyInfo.cs"],
		"tag": true,
		"badges": [
			{
				"image": "https://ci.appveyor.com/api/projects/status/r64c62387r8j9424?svg=true",
				"url": "https://ci.appveyor.com/api/projects/status/r64c62387r8j9424",
				"alt": "Build Status"
			}
		]
	},
	"indentation": "spaces",
	"types": {
		"names": {
			"default": "@default",
			"value": "@value",
			"event": "@event"
		},
		"conv": {
			"basic": {
				"byte": "sbyte",
				"ubyte": "byte",
				"bytes": "byte[]",
				"uuid": "System.Guid",
				"triad": "int",
				"varshort": "short",
				"varushort": "ushort",
				"varint": "int",
				"varuint": "uint",
				"varlong": "long",
				"varulong": "ulong"
			},
			"tuples": {
				"2": "System.Tuple<%, %>",
				"3": "System.Tuple<%, %, %>"
			},
			"arrays": {
				"dynamic": "{{TYPE}}[]",
				"fixed": "{{TYPE}}[]"
			},
			"metadata": "Metadata",
			"others": "{{TYPE:pascal_case}}"
		},
		"default": {
			"number": "0",
			"type": "new {{NAME:pascal_case}}()",
			"string": "\"\"",
			"array": "new {{TYPE}}[]{}",
			"fixed_array": "new {{TYPE}}[{{SIZE}}]",
			"uuid": "System.Guid.Empty"
		},
		"encoding": {
			"basic": "_buffer.Write{{ENDIANNESS:pascal_case}}{{ORIGINAL_TYPE:pascal_case}}({{NAME:camel_case}});",
			"types": "{{NAME:camel_case}}.EncodeBody(_buffer);",
			"arrays": "foreach ({{ELEMENT_TYPE}} {{ELEMENT_NAME:camel_case}} in {{NAME:camel_case}}){ {{CONTENT}} }",
			"tuples": "{{NAME:camel_case}}.Item{{INDEX1}}",
			"array_length": "%.Length",
			"string_length": "Encoding.UTF8.GetByteCount(%)"
		},
		"decoding": {
			"basic": "{{NAME:camel_case}} = _buffer.Read{{ENDIANNESS:pascal_case}}{{ORIGINAL_TYPE:pascal_case}}();",
			"types": "{{NAME:camel_case}}.DecodeBody(_buffer);",
			"arrays": "?",
			"tuples": "{{NAME:camel_case}}.Item{{INDEX1}}",
			"array_length": "",
			"string_length": ""
		}
	}
}
