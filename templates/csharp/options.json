		},
		"decoding": {
			"basic": "this.{{NAME:camel_case}} = this.Read{{ENDIANNESS:pascal_case}}{{TYPE:pascal_case}}()",
			"types": "this.{{NAME:camel_case}}.Decode()"
		}
	}
