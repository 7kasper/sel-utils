{
	"repo": {
		"name": "D",
		"src": "src",
		"exclude": ["sul/utils/about.d"],
		"tag": true,
		"badges": [
			{
				"image": "https://travis-ci.org/sel-utils/d.svg?branch=master",
				"url": "https://travis-ci.org/sel-utils/d",
				"alt": "Build Status"
			},
			{
				"image": "https://img.shields.io/dub/v/sel-utils.svg",
				"url": "https://code.dlang.org/packages/sel-utils",
				"alt": "DUB Package"
			},
			{
				"image": "https://img.shields.io/dub/dt/sel-utils.svg",
				"url": "https://code.dlang.org/packages/sel-utils",
				"alt": "DUB Downloads"
			}
		]
	},
	"indentation": "spaces",
	"types": {
		"names": {
			"version": "vers",
			"body": "body_",
			"safe": "safe_"
		},
		"conv": {
			"basic": {
				"bytes": "ubyte[]",
				"uuid": "UUID",
				"triad": "int",
				"varshort": "short",
				"varushort": "ushort",
				"varint": "int",
				"varuint": "uint",
				"varlong": "long",
				"varulong": "ulong"
			},
			"tuples": {
				"2": "Tuple!(%, $0, %, $1)",
				"3": "Tuple!(%, $0, %, $1, %, $2)"
			},
			"metadata": "sul.metadata.{{GAME:lowercase}}.Metadata",
			"others": "sul.protocol.{{GAME:lowercase}}.types.{{TYPE:pascal_case}}"
		},
		"encoding": {
			"basic": "this.write{{ENDIANNESS:pascal_case}}{{TYPE:pascal_case}}({{NAME:camel_case}})",
			"types": "{{NAME:camel_case}}.encode()"
		}
	}
}
